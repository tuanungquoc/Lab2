<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/future_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="Tue"
            android:textColor="@color/cast_intro_overlay_button_background_color"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/day_temperature_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/future_day"
            android:layout_toLeftOf="@+id/max_temp"
            android:layout_weight="1.5"
            android:gravity="center" />


        <TextView
            android:id="@+id/max_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toStartOf="@+id/min_temp"
            android:layout_weight="0.5"
            android:gravity="right"
            android:padding="10dp"
            android:text="50"
            android:textColor="@color/cast_intro_overlay_button_background_color"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/min_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:text="20"
            android:textColor="@color/cast_intro_overlay_button_background_color"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>